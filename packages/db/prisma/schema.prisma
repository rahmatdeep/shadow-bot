generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String         @id @default(uuid())
  email             String         @unique
  password          String
  name              String
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  provider          String?
  providerAccountId String?
  recordings        Recording[]
  querySessions     QuerySession[]
}

model Recording {
  id            String          @id @default(uuid())
  userId        String
  user          User            @relation(fields: [userId], references: [id])
  link          String
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  fileName      String?
  title         String?
  status        RecordingStatus @default(PENDING)
  errorMetadata Json?
  transcript    Transcript?
  chatSessions  ChatSession[]
}

model Transcript {
  id                       String           @id @default(uuid())
  recordingId              String           @unique
  recording                Recording        @relation(fields: [recordingId], references: [id])
  transcript               String?
  transcriptWithTimeStamps String?
  summary                  Json?
  createdAt                DateTime         @default(now())
  updatedAt                DateTime         @updatedAt
  transcriptionStatus      TranscriptStatus @default(PENDING)
  summaryStatus            TranscriptStatus @default(PENDING)
  failureReason            String?
  detailedSummary          String?
  detailedSummaryStatus    TranscriptStatus @default(PENDING)
  tags                     String[]
  tagsStatus               TranscriptStatus @default(PENDING)
  embeddingStatus          TranscriptStatus @default(PENDING)
}

model ChatSession {
  id          String        @id @default(uuid())
  recordingId String
  recording   Recording     @relation(fields: [recordingId], references: [id])
  title       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  messages    ChatMessage[]
}

model ChatMessage {
  id            String      @id @default(uuid())
  chatSessionId String
  chatSession   ChatSession @relation(fields: [chatSessionId], references: [id], onDelete: Cascade)
  role          ChatRole
  content       String
  createdAt     DateTime    @default(now())
}

model QuerySession {
  id        String         @id @default(uuid())
  userId    String
  user      User           @relation(fields: [userId], references: [id])
  title     String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  messages  QueryMessage[]
}

model QueryMessage {
  id             String       @id @default(uuid())
  querySessionId String
  querySession   QuerySession @relation(fields: [querySessionId], references: [id], onDelete: Cascade)
  role           ChatRole
  content        String
  createdAt      DateTime     @default(now())
}

enum RecordingStatus {
  PENDING
  ASKING_TO_JOIN
  JOINED
  COMPLETED
  FAILED
  TIMEOUT
}

enum TranscriptStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

enum ChatRole {
  USER
  ASSISTANT
}
